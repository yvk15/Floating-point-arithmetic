module layer4(P, G, CIN, OUTP4, OUTG4, CIN4);
    input [15:0] G;
    input [15:3] P;
    output [15:7] OUTP4;
    output [15:0] OUTG4;

    buffer b1(
        .A(CIN),
        .Y(CIN4)
    );

    genvar k;
    generate
        for(k=0;k<3;k=k+1) begin : buffer_loop
            buffer inst1(
                .A(G[k]),
                .Y(OUTG4[k])
            );
        end   
    endgenerate

    gray_cell inst1(
        .G21(G[3]),
        .P21(P[3]),
        .G10(CIN),
        .G20(OUTG4[3])
    );
    
    genvar j;
    generate
        for(j=4;j<7;j=j+1) begin : gray_cell_loop
            gray_cell inst(
                .G21(G[j]),
                .P21(P[j]),
                .G10(G[j-4]),
                .G20(OUTG4[j])
            );
        end   
    endgenerate

    genvar i; 
    generate  
        for(i=8;i<16;i=i+1) begin : black_cell_loop
            black_cell inst(
                .G21(G[i]),
                .P21(P[i]),
                .G10(G[i-4]),
                .P10(P[i-4]),
                .G20(OUTG4[i]),
                .P20(OUTP4[i])
            );
        end
    endgenerate

endmodule